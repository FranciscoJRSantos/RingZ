<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.OnboardingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_black"
            android:layout_marginTop="24dp"
            android:paddingStart="18sp"
            android:paddingEnd="18sp"
            android:textSize="18sp"
            android:textColor="@color/secondaryColor"
            android:text="RingZ" />

        <Button
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="18sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginStart="120sp"
            android:onClick="onRegisterClick"
            android:text="Registar"/>

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginEnd="18sp"
            android:layout_marginTop="24dp"
            android:onClick="onLoginClick"
            android:text="Entrar"/>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/presentation_layout">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="190dp"
                android:layout_height="530dp"
                android:layout_alignParentBottom = "true"
                android:baselineAlignBottom="false"
                android:src="@drawable/walking_guy" />
            <TextView
                android:id="@+id/main_title"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="235dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/poppins_black"
                android:text="A campanhia digital para a tua casa."
                android:textAllCaps="true"
                android:textColor="@color/secondaryColor"
                android:textSize="30sp" />
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="385dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/poppins_medium"
                android:text="A campanhia digital que te vai ajudar a abrir a porta e gerir os convidados da tua
casa."
                android:textColor="@color/secondaryColor"
                android:textSize="18sp" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>