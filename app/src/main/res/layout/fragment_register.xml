<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.RegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_black"
            android:paddingStart="21sp"
            android:paddingEnd="21sp"
            android:paddingTop="88sp"
            android:paddingBottom="20sp"
            android:text="Criar Conta"
            android:textColor="@color/secondaryColor"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="21sp"
            android:paddingEnd="21sp"
            android:paddingBottom="8sp"
            android:text="Email:"
            android:textColor="@color/secondaryColor"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/email_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:inputType="textEmailAddress"
            android:paddingStart="21sp"
            android:paddingEnd="21sp"
            android:paddingBottom="8sp"
            android:textColor="@color/secondaryColor"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="21sp"
            android:paddingEnd="21sp"
            android:paddingBottom="8sp"
            android:text="Nome:"
            android:textColor="@color/secondaryColor"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/name_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:inputType="textPersonName"
            android:paddingStart="21sp"
            android:paddingEnd="21sp"
            android:paddingBottom="8sp"
            android:textColor="@color/secondaryColor"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="21sp"
            android:paddingEnd="21sp"
            android:paddingBottom="8sp"
            android:text="Nickname:"
            android:textColor="@color/secondaryColor"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/nickname_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:inputType="textPersonName"
            android:paddingStart="21sp"
            android:paddingEnd="21sp"
            android:paddingBottom="8sp"
            android:textColor="@color/secondaryColor"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="21sp"
            android:paddingEnd="21sp"
            android:paddingBottom="8sp"
            android:text="Palavra-passe:"
            android:textColor="@color/secondaryColor"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/password_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:inputType="textPassword"
            android:paddingStart="21sp"
            android:paddingEnd="21sp"
            android:paddingBottom="8sp"
            android:textColor="@color/secondaryColor"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="21sp"
            android:paddingEnd="21sp"
            android:paddingBottom="8sp"
            android:text="Confirmar palavra-passe:"
            android:textColor="@color/secondaryColor"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/confirm_password_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:inputType="textPassword"
            android:paddingStart="21sp"
            android:paddingEnd="21sp"
            android:paddingBottom="8sp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/create_account_button"
            android:layout_marginTop="18sp"
            android:layout_width="185sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/confirm_button"
            android:fontFamily="@font/poppins_medium"
            android:text="Criar conta"
            android:textColor="@color/confirmColor"
            android:textSize="18sp" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="185sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/disabled_button"
            android:fontFamily="@font/poppins_medium"
            android:text="Entrar"
            android:textColor="@color/disabledColor"
            android:textSize="18sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>