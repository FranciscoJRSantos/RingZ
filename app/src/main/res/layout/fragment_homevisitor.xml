<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.HomeFragment"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/house_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18sp"
            android:layout_marginTop="88dp"
            android:fontFamily="@font/poppins_black"
            android:text="Casa X"
            android:textColor="@color/secondaryColor"
            android:textSize="24sp" />
        <Button
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18sp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/primaryColor"
            android:background="@drawable/black_bg_bordered_black"
            android:text="Tocar Ã  campanhia"
            android:textSize="18sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="18sp"
            android:paddingEnd="18sp"
            android:text="Membros da Casa:"
            android:layout_marginTop="20dp"
            android:textColor="@color/secondaryColor"
            android:textSize="18sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="18sp"
            android:paddingEnd="18sp"
            android:text="Visitantes da Casa:"
            android:textColor="@color/secondaryColor"
            android:layout_marginTop="20dp"
            android:textSize="18sp" />
        <Button
            android:id="@+id/remove_visitors"
            android:layout_width="185sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/cancel_button"
            android:fontFamily="@font/poppins_medium"
            android:text="Sair da casa"
            android:textColor="@color/cancelColor"
            android:layout_marginTop="20dp"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>